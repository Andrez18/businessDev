<style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            text-decoration: none;
        }

        header {
            font-family: 'DM Sans', sans-serif;
            margin: 1.5rem 0;
            width: calc(100% - 24px);
            margin: 3rem 0;
        }

        header nav {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 0 5rem;
            width: 100%;
        }

        header.scrolled {
            background: rgba(17, 17, 20, 0.95);
            backdrop-filter: blur(20px);
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
            padding: 0.75rem 0;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
        }

        .logo {
            display: flex;
            align-items: center;
            gap: 0.3rem;
            padding: 0.5rem 0.75rem;
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .logo svg {
            width: 40px;
            height: 40px;
        }

        .logo a {
            font-family: 'Monserrate', sans-serif;
            font-weight: 600;
            font-size: 1.2rem;
            color: var(--color-titles);
            text-decoration: none;
        }

        .logo:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .nav-links {
            display: flex;
            justify-content: center;
            align-items: center;
            flex-grow: 1;
            list-style: none;
            gap: 2rem;
        }

        .nav-links a {
            color: var(--color-links);
            font-weight: 500;
            transition: all 0.3s ease;
            padding: 0.5rem 0.75rem;
            border-radius: 20px;
        }

        .nav-links a:hover {
            color: #fafafa;
            background-color: rgba(255, 255, 255, 0.1);
        }

        .login-btn {
            color: var(--color-links);
            font-weight: 600;
            padding: 0.5rem 1rem;
            border: 1px solid var(--color-links);
            border-radius: 20px;
            transition: all 0.3s ease;
        }

        .login-btn:hover {
            color: #fafafa;
            border: 1px solid #fafafa;
        }

        .modal {
            display: none;
            position: fixed;
            z-index: 999;
            inset: 0;
            background-color: rgba(0, 0, 0, 0.8);
            justify-content: center;
            align-items: center;
        }

        .modal-overlay {
            position: absolute;
            inset: 0;
            background-image: radial-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px);
            background-size: 30px 30px;
            pointer-events: none;
        }

        .modal-content.scrollable {
            position: relative;
            background: var(--background-dark);
            color: #fff;
            border-radius: 2rem;
            width: 100%;
            height: 100%;
            overflow-y: auto;
            max-width: 1000px;
            z-index: 10;
            transition: all 0.3s ease;
        }

        .modal-header {
            position: sticky;
            top: 0;
            background: var(--background-dark);
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1rem 2rem;
            z-index: 9;
            border-bottom: 1px solid rgba(255, 255, 255, 0.1);
        }

        .close-modal {
            font-size: 2rem;
            font-weight: bold;
            color: #fff;
            cursor: pointer;
            padding: 10px;
            border-radius: 50px;
            transition: background 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .close-modal:hover {
            background: rgba(255, 255, 255, 0.1);
        }

        .modal-body {
            padding: 0 2rem 2rem;
        }

        .hero-section {
            display: flex;
            justify-content: center;
            margin-bottom: 2rem;
        }

        .hero-container {
            display: flex;
            width: 100%;
            max-width: 1200px;
            overflow: hidden;
            position: relative;
            border-radius: 1rem;
        }

        .hero-content {
            display: flex;
            flex-grow: 1;
            justify-content: center;
            padding: 4rem 2rem;
            z-index: 1;
            position: relative;
        }

        .hero-title {
            font-size: 3rem;
            font-weight: 600;
            color: #ffffff;
            text-align: center;
            user-select: none;
            line-height: 1;
            font-family: 'DM Sans', sans-serif;
        }

        .background-pattern {
            position: absolute;
            width: 100%;
            height: 100%;
            background-image: radial-gradient(rgba(255, 255, 255, 0.04) 1px, transparent 1px);
            background-size: 30px 30px;
            pointer-events: none;
        }

        .custom-alert {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.8);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 9999;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .custom-alert.show {
            opacity: 1;
            visibility: visible;
        }

        .custom-alert-content {
            background: var(--background-dark, #1b1b1f);
            border: 1px solid rgba(255, 255, 255, 0.1);
            border-radius: 1rem;
            padding: 2rem;
            max-width: 400px;
            width: 90%;
            text-align: center;
            box-shadow: 0 20px 40px rgba(0, 0, 0, 0.5);
            transform: scale(0.9);
            transition: transform 0.3s ease;
        }

        .custom-alert.show .custom-alert-content {
            transform: scale(1);
            animation: alertSlideIn 0.3s ease forwards;
        }

        .custom-alert-icon {
            width: 60px;
            height: 60px;
            margin: 0 auto 1rem;
            background: linear-gradient(135deg, #f59e0b, #d97706);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 2rem;
        }

        .custom-alert-title {
            font-size: 1.5rem;
            font-weight: 600;
            color: #ffffff;
            margin-bottom: 0.5rem;
            font-family: 'DM Sans', sans-serif;
        }

        .custom-alert-message {
            font-size: 1rem;
            color: #d1d5db;
            margin-bottom: 2rem;
            line-height: 1.5;
        }

        .custom-alert-button {
            background: linear-gradient(135deg, #3b82f6, #2563eb);
            border: none;
            color: white;
            padding: 0.75rem 2rem;
            border-radius: 0.5rem;
            cursor: pointer;
            font-size: 1rem;
            font-weight: 500;
            transition: all 0.3s ease;
            font-family: inherit;
        }

        .custom-alert-button:hover {
            background: linear-gradient(135deg, #2563eb, #1d4ed8);
            transform: translateY(-2px);
            box-shadow: 0 8px 20px rgba(59, 130, 246, 0.3);
        }

        @keyframes alertSlideIn {
            from {
                transform: translateY(-20px) scale(0.9);
                opacity: 0;
            }
            to {
                transform: translateY(0) scale(1);
                opacity: 1;
            }
        }

        .section-divider {
            display: flex;
            justify-content: center;
            margin-bottom: 1rem;
        }

        .section-title {
            font-family: 'DM Sans', sans-serif;
            text-align: center;
            font-size: 1.5rem;
            font-weight: 500;
            color: #94a3b8;
            position: relative;
        }

        .project-card {
            display: flex;
            background-color: #1b1b1f;
            border-radius: 1rem;
            padding: 2rem;
            margin-bottom: 1.5rem;
            box-shadow: 0 4px 20px rgba(0,0,0,0.3);
            transition: all 0.3s ease;
            flex-wrap: wrap;
            user-select: none;
        }

        .project-title {
            font-size: 2rem;
            font-weight: 500;
            color: #a5b4fc;
            line-height: 1;
            font-family: 'DM Sans', sans-serif;
            margin-bottom: 0.5rem;
        }

        .project-description {
            color: #d1d5db;
            font-size: 1.25rem;
            line-height: 1.4;
            margin-bottom: 1rem;
        }

        .project-btn {
            background: none;
            border: 1px solid #64748b;
            color: #ffffff;
            padding: 0.75rem 1.5rem;
            border-radius: 0.5rem;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-size: 1rem;
            font-family: inherit;
        }

        .project-btn:hover {
            border-color: #ffffff;
            background-color: rgba(255, 255, 255, 0.1);
        }

        @media only screen and (max-width: 768px) {
            header nav {
                padding: 1rem;
                justify-content: space-between;
            }
            .nav-links {
                display: none;
            }
            .hero-title {
                font-size: 2rem;
            }
        }
</style>

<script>
        // Función para mostrar alerta personalizada
        function showCustomAlert(message, title = 'Información') {
            const alertElement = document.getElementById('custom-alert');
            const messageElement = document.getElementById('alert-message');
            const titleElement = document.querySelector('.custom-alert-title');
            
            titleElement.textContent = title;
            messageElement.textContent = message;
            
            alertElement.classList.add('show');
            document.body.style.overflow = 'hidden';
        }

        // Función para cerrar alerta personalizada
        function hideCustomAlert() {
            const alertElement = document.getElementById('custom-alert');
            alertElement.classList.remove('show');
            document.body.style.overflow = '';
        }

        document.addEventListener('DOMContentLoaded', function() {
            const modal = document.getElementById("projects-modal");
            const modalContent = document.getElementById("modal-content");
            const openBtn = document.getElementById("open-projects");
            const closeBtn = document.querySelector(".close-modal");
            const projectBtns = document.querySelectorAll(".project-btn");
            const loginBtn = document.getElementById("login-btn");
            const alertButton = document.getElementById("alert-button");

            // Botón de cerrar alerta
            alertButton.addEventListener("click", hideCustomAlert);

            // Cerrar alerta al hacer clic fuera
            document.getElementById('custom-alert').addEventListener('click', function(e) {
                if (e.target === this) {
                    hideCustomAlert();
                }
            });

            // Botón de iniciar sesión - AHORA FUNCIONA
            loginBtn?.addEventListener("click", (e) => {
                e.preventDefault();
                showCustomAlert("Aún estamos trabajando en esta función", "Función en desarrollo");
            });
            
            // Abrir modal
            openBtn?.addEventListener("click", (e) => {
                e.preventDefault();
                modal.style.display = "flex";
                document.body.style.overflow = 'hidden';
            });
            
            // Cerrar modal
            closeBtn?.addEventListener("click", () => {
                closeModal();
            });
            
            // Cerrar modal al hacer clic en el overlay
            window.addEventListener("click", (e) => {
                if (e.target === modal) {
                    closeModal();
                }
            });
            
            // Función para cerrar modal y resetear estado
            function closeModal() {
                modal.style.display = "none";
                document.body.style.overflow = '';
            }
            
            // Botones de proyectos
            projectBtns.forEach(btn => {
                btn.addEventListener('click', function() {
                    const url = this.getAttribute('data-url');
                    if (url) {
                        window.open(url, '_blank');
                    }
                });
            });

            // Tecla Escape para cerrar modal y alerta
            document.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    if (document.getElementById('custom-alert').classList.contains('show')) {
                        hideCustomAlert();
                    } else if (modal.style.display === 'flex') {
                        closeModal();
                    }
                }
            });
        });
</script>